<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ManageGroupGiftActivity">

    <!-- AppBar or Toolbar -->
    <include
        android:id="@+id/homeAppBar"
        layout="@layout/homeappbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/homeAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Main Content Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title Section -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Group Gift"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:gravity="center" />

            <!-- Service Info Section -->
            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Wellness Package"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/service_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A package for Anu to improve wellness."
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"
                android:gravity="center" />

            <!-- Circular Progress Indicator and Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circularProgressIndicator"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:indeterminate="false"
                    app:indicatorColor="@color/success"
                    app:trackThickness="12dp"
                    app:trackColor="@color/primary" />

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$150 / $500"
                    android:textSize="22sp"
                    android:textColor="@color/success"
                    android:layout_marginTop="0dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Contributors List Section -->
            <LinearLayout
                android:id="@+id/contributors_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/contributor_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steve Samson: $50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/contributor_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simrat Kaur: $50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/contributor_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isuru Anjula: $50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/btn_invite_contributors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite Contributors"
                android:textAllCaps="false"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>