<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Medgift" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.Medgift" parent="Base.Theme.Medgift" />

    <style name="ProgressStyle">
        <item name="colorAccent">@color/gray</item>
    </style>



    <style name="TextEdit">
        <item name='android:layout_marginTop'>5dp</item>
        <item name='android:paddingHorizontal'>10dp</item>
        <item name='android:paddingVertical'>8dp</item>
        <item name='android:textStyle'>normal</item>
        <item name='android:textAlignment'>textStart</item>
        <item name='android:textSize'>12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="Progress">
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLayout">
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="helperTextTextColor">@color/secondary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/midnightblue</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="DestructiveButton">
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/alert</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/lightgray</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="InvertedButton">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@drawable/inverted_button_background_blue</item>
    </style>

    <style name="Title">
        <item name="android:layout_marginVertical">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GetStartedButton">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ContentButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="Pane">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Content">
        <item name="android:background">@drawable/border_tertiary</item>
    </style>

    <style name="Page">
        <item name="android:background">@color/lightgray</item>
        <!--        <item name="android:paddingVertical">20dp</item>-->
    </style>

    <style name="Row">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/border_tertiary</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Rounded">
        <item name="cornerSize">5dp</item>
    </style>
    <style name="RoundedTop">
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>


</resources>